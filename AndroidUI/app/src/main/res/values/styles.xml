<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonStyle" parent="AppTheme">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="SearchStyle">
        <item name="android:textColor">#FFFF0000</item>
    </style>

    <style name="MyTabLayoutStyle">
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">normal</item>
        <item name="textAllCaps">false</item>
    </style>

    <!--  BottomSheetDialog圆角效果  -->
    <style name="MyBottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <!--  BottomSheetDialog圆角效果、背景无阴影  -->
    <style name="MyBottomSheetDialogBgStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="DialogStyle">
        <!--是否显示Title -->
        <item name="android:windowNoTitle">true</item>
        <!--Dialog中Window的背景颜色-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--Dialog背景颜色-->
        <item name="android:background">@android:color/transparent</item>
        <!--去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--Dialog外部区域是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--Dialog外部区域模糊度，当值为1 时，除了dialog以外的部分全黑-->
        <item name="android:backgroundDimAmount">0.6</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否半透明-->
        <item name="android:windowIsTranslucent">true</item>
        <!--窗口内容的前景-->
        <item name="android:windowContentOverlay">@null</item>
        <!--竖屏状态下的dialog最小宽度-->
        <!--        <item name="android:windowMinWidthMinor">100%</item>-->
        <!--横屏状态下的dialog最小宽度-->
        <!--        <item name="android:windowMinWidthMajor">100%</item>-->
    </style>

    <style name="DialogStyle.Animation" parent="DialogStyle">
        <!-- dialog动画-->
        <item name="android:windowAnimationStyle">@style/DialogAnim</item>
    </style>

    <!-- 动画样式 -->
    <style name="DialogAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/anim_enter</item>
        <item name="android:windowExitAnimation">@anim/anim_exit</item>
    </style>

    <style name="SpinnerStyle" parent="android:Widget.ListView.DropDown">
        <item name="android:divider">#333</item>
        <item name="android:dividerHeight">1dp</item>
    </style>

    <style name="RatingBarStyle">
        <item name="android:progressDrawable">@drawable/shape_ratingbar_progress</item>
        <item name="android:minHeight">50dp</item>
        <item name="android:maxHeight">50dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CircleStyle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="RoundStyle">
        <item name="cornerSize">10dp</item>
    </style>
</resources>