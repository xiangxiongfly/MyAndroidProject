<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="操作状态栏" />

    <Button
        android:id="@+id/btn_opera_status_bar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="状态栏操作(全屏+状态栏无文字图标)" />

    <Button
        android:id="@+id/btn_opera_status_bar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="状态栏操作(全屏+状态栏有文字图标)" />

    <Button
        android:id="@+id/btn_opera_status_bar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="修改状态栏颜色" />

    <androidx.appcompat.widget.AppCompatTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="沉浸式状态栏" />

    <Button
        android:id="@+id/btn_immersion_status_bar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="只使用fitsSystemWindows属性" />

    <Button
        android:id="@+id/btn_immersion_status_bar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="使用CoordinatorLayout+fitsSystemWindows " />

    <Button
        android:id="@+id/btn_immersion_status_bar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="使用CoordinatorLayout+CollapsingToolbarLayout" />

    <Button
        android:id="@+id/btn_immersion_status_bar4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="使用FrameLayout实现沉浸式" />

    <Button
        android:id="@+id/btn_immersion_status_bar5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="区分状态栏图标颜色和背景图颜色" />
</LinearLayout>